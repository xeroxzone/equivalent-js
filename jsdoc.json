{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [
      "jsdoc",
      "closure"
    ]
  },
  "source": {
    "include": [
      "src/app"
    ],
    "exclude": [
      "src/test"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [
    "plugins/markdown",
    "plugins/shout"
  ],
  "templates": {
    "systemName"            : "EquivalentJS",
    "copyright"             : "MIT",
    "navType"               : "vertical",
    "inverseNav"            : true,
    "theme"                 : "cosmo",
    "linenums"              : true,
    "collapseSymbols"       : false,
    "outputSourceFiles"     : true
  },
  "opts": {
    "encoding": "utf8",
    "template": "./node_modules/ink-docstrap/template",
    "tutorials": "./docs",
    "destination": "./web/doc",
    "readme": "./README.md",
    "private": true,
    "recurse": true
  }
}
